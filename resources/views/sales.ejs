<Style>
.chart-section {
  height: 50vh;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.line-chart-section {
  height: 100%;
  width: 50%;
}
</Style>

<section class="menu container mx-auto py-8">
    <div class="flex items-center justify-center">
        <a href="/admin/orders"><button
          type="button"
          class="rounded-md mx-4 bg-yellow-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-600/80 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600"
        >
          Dashboard
        </button></a>
      </div>
      <div class="chart-section">
        <div class="line-chart-section">
          <h2>Sales Chart</h2>
          <canvas id="lineChart"></canvas>
        </div>
      </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js"></script>
    <script>
      // Line chart data
      var lineData = {
        labels: [
          "January",
          "February",
          "March",
          "April",
          "May"
        ],
        datasets: [
          {
            label: "Profits",
            data: [1000, 2000, 5000, 10000, 12000, 7000, 40000],
            borderColor: "#8368DB",
            fill: false,
          },
        ],
      };

      // Initialize line chart
      var lineCtx = document.getElementById("lineChart").getContext("2d");
      var lineChart = new Chart(lineCtx, {
        type: "line",
        data: lineData,
      });
    </script>
</section>
